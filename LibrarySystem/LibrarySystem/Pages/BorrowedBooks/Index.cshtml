@page
@model LibrarySystem.Pages.BorrowedBooks.IndexModel

@{
    ViewData["Title"] = "List of borrowed books";
}

    <h1>List of borrowed books</h1>

<p>
    <a asp-page="Create">Add a borrowed book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Member ID
            </th>
            <th>
                Member Full Name
            </th>
            <th>
                Copy ID
            </th>
            <th>
                Book Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBook[0].BorrowedDate)
            </th>
            <th>
                Designated Return Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBook[0].ActualReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BorrowedBook) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.IDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FirstName)  @Html.DisplayFor(modelItem => item.Member.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCopy.BookCopyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCopy.Book.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualReturnDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BorrowedBookId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BorrowedBookId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BorrowedBookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

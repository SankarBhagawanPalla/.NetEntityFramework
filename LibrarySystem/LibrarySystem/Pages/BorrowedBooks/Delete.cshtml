@page
@model LibrarySystem.Pages.BorrowedBooks.DeleteModel

@{
    ViewData["Title"] = "Remove a borrowed book";
}

    <h1>Remove a borrowed book</h1>

<h3>Are you sure you want to remove the borrowed book?</h3>
<div>
    <h4>Borrowed Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedBook.Member.IDNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.Member.IDNumber)
        </dd>
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.Member.FirstName) @Html.DisplayFor(model => model.BorrowedBook.Member.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedBook.BookCopy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.BookCopy.BookCopyId)
        </dd>
        <dt class="col-sm-2">
            Book Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.BookCopy.Book.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedBook.BorrowedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.BorrowedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedBook.ActualReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedBook.ActualReturnDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="BorrowedBook.BorrowedBookId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

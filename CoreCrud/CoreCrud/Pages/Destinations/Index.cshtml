@page
@model CoreCrud.Pages.Destinations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].TravelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].IsFlightServiceAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].TotalFair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Destination) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFlightServiceAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFair)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
